<h2><%= @restaurant.name %></h2>
<p>Adress: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>category: <%= @restaurant.category %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>
<br>


<%= link_to "Show all restaurants", restaurants_path %>
<%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
